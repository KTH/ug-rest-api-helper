{
  "name": "@kth/ug-rest-api-helper",
  "version": "1.0.9",
  "description": "Node.js module to make JSON calls against APIs.",
  "main": "index.js",
  "automaticPublish": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/ug-rest-api-helper"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "jest:watch-update": "jest --watch -u",
    "build": "./build.sh",
    "prettier:all": "prettier --write \"**/*.js\"",
    "prepare": "husky"
  },
  "keywords": [
    "api",
    "kth",
    "json"
  ],
  "dependencies": {
    "@azure/msal-node": "^2.1.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@kth/eslint-config-kth": "^3.0.13",
    "@types/jest": "^29.2.5",
    "babel-jest": "^29.6.0",
    "eslint": "^8.44.0",
    "express": "^4.18.2",
    "husky": "^9.1.7",
    "jest": "^29.4.3",
    "jest-extended": "^4.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.0.0"
  },
  "// (prettier)": "configuration version 2020-06-15 - might also reside in .prettierrc.json",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "**/*.js": [
      "npx prettier --write"
    ]
  },
  "// (jest)": "configuration version 2020-06-15 (API+NPM) - might also reside as module.exports in jest.config.js",
  "jest": {
    "clearMocks": true,
    "notifyMode": "failure-change",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
